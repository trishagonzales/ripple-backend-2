{
  "name": "ripple-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && dotenv -c production node build/index.js",
    "dev": "dotenv -c development ts-node-dev src/index.ts",
    "build": "npx tsc",
    "test": "dotenv -c test npx jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "testTimeout": 50000,
    "maxWorkers": 1,
    "rootDir": "src",
    "moduleNameMapper": {
      "@root/(.*)": "<rootDir>/$1",
      "@api/(.*)": "<rootDir>/api/$1",
      "@models/(.*)": "<rootDir>/models/$1",
      "@services/(.*)": "<rootDir>/services/$1",
      "@startup/(.*)": "<rootDir>/startup/$1",
      "@types/(.*)": "<rootDir>/types/$1",
      "@utils/(.*)": "<rootDir>/utils/$1",
      "@test-utils/(.*)": "<rootDir>/test-utils/$1"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
